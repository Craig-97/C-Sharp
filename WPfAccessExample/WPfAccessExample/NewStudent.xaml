<Window x:Class="WPfAccessExample.NewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewStudent" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtFirst" HorizontalAlignment="Left" Height="41" Margin="147,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
        <TextBox x:Name="txtLast" HorizontalAlignment="Left" Height="41" Margin="147,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="36" Margin="10,206,0,0" VerticalAlignment="Top" Width="116" Click="btnCancel_Click"/>
        <Button x:Name="btnInsert" Content="Insert" HorizontalAlignment="Left" Height="36" Margin="147,206,0,0" VerticalAlignment="Top" Width="116" Click="btnInsert_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="10,68,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="116" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="10,136,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="116" FontSize="24"/>

    </Grid>
</Window>
