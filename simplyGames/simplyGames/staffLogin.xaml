<Window x:Class="SimplyGames.staffLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="staffLogin" Height="200" Width="350">
    <Grid>
        <Button x:Name="btnLogin" Content="Sign In" HorizontalAlignment="Left" Margin="105,125,0,0" VerticalAlignment="Top" Width="125" Height="35" FontSize="20" FontWeight="Bold" Click="btnLogin_Click"/>
        <PasswordBox x:Name="PsswdBox" HorizontalAlignment="Left" Margin="105,100,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="45,100,0,0" VerticalAlignment="Top" Height="24"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="20" Margin="105,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="36,74,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
