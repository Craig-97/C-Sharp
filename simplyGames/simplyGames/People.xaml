<Window x:Class="SimplyGames.People"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="People" Height="300" Width="350">
    <Grid>
        <TextBox x:Name="txtDisplay" HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnView" Content="View All" HorizontalAlignment="Left" Margin="216,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnView_Click"/>
        <Button x:Name="btnCustomers" Content="View Customers" HorizontalAlignment="Left" Margin="216,45,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnCustomers_Click"/>
        <Button x:Name="btnStaff" Content="View Staff" HorizontalAlignment="Left" Margin="216,80,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="btnStaff_Click"/>

    </Grid>
</Window>
