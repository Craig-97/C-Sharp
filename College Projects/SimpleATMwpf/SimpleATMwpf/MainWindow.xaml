<Window x:Class="SimpleATMwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="303" Closing="Window_Closing">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="24,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="244" FontSize="22"><Run Language="en-gb" Text="Enter Customer name to simulate entering card"/></TextBlock>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="40" Margin="24,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <Button x:Name="btnName" Content="Insert Card" HorizontalAlignment="Left" Margin="24,159,0,0" VerticalAlignment="Top" Width="244" Height="32" Click="btnName_Click"/>

    </Grid>
</Window>
